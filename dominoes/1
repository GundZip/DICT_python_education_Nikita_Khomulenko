def make_move(board, pieces, player, computer_size):
    print_board(board)
    print_pieces(pieces, player)
    if player == 'user':
        valid_move = False
        while not valid_move:
            move = input("Enter your command.\n")
            if move == '0':
                return False
            try:
                move = int(move)
                if abs(move) > len(pieces):
                    raise ValueError
                if move > 0:
                    piece = pieces[move-1]
                    if board and piece[0] != board[0][0] and piece[1] != board[-1][1]:
                        raise ValueError
                    if board and piece[0] == board[0][0]:
                        board.insert(0, piece)
                    else:
                        board.append(piece)
                    pieces.pop(move-1)
                    valid_move = True
                else:
                    pieces.append(draw_piece(computer_size))
                    valid_move = True
            except:
                print("Illegal move. Please try again.")
    else:
        print("Computer is about to make a move. Press Enter to continue...")
        input()
        valid_move = False
        while not valid_move:
            piece = draw_piece(computer_size)
            for p in pieces:
                if p[0] == board[0][0] and p[0] != p[1]:
                    board.insert(0, p)
                    pieces.remove(p)
                    valid_move = True
                    break
                elif p[1] == board[-1][1] and p[0] != p[1]:
                    board.append(p)
                    pieces.remove(p)
                    valid_move = True
                    break
            if not valid_move:
                pieces.append(piece)
    return True